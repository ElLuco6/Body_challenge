{% extends 'base.html.twig' %}

{% block title %}Supprimer votre profil{% endblock %}

{% block body %}
<div class="row justify-content-center">

    <div class="col-6">
        <form method="post">
            <p>Vous êtes sur de vouloir supprimer votre profil </p> 
            


            <p>Attention, la suppression d'un profil est définitive !!</p>


            
            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">Non, annuler</a>


            <input type="hidden" name="confirm" value="yes">
            <button type="submit" class="btn btn-danger">Oui, je supprime mon profil</button>
        </form>

    </div>
</div>


{% endblock %}
