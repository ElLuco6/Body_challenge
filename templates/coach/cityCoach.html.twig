{% extends 'base.html.twig' %}

{% block title %}Coach dans votre région{% endblock %}

{% block body %}
<h1>Coach dans votre région</h1>
{% for message in app.flashes('success') %}
<div class="alert alert-success text-center" role="alert">{{ message }}</div>
{% endfor %}

<div class="container">
    <div class="row">
        {% for coach in coaches %}
        <div class="col-md-4 col-sm-12">
            <div class="card text-center mt-5" style="width: 18rem;">
                <img src="{{ asset('/uploads/photos_coachs/' ~ coach.picture) }}" alt="Image">
                <div class="card-body">
                  <h5 class="card-title">{{ coach.firstName }}, {{ coach.age }} ans </h5>
                  <p class="card-text">{{ coach.sport }}.</p>
                  <p class="card-text">{{ coach.city }}.</p>
                  <p class="card-text">{{ coach.tarif }} €/heure</p>
                  <a href="{{ path('app_view', {id: coach.id})}}" class="btn btn-primary m-auto rounded-pill">Voir le coach</a>

        
                </div>
              </div>
        </div>
        {% endfor %}
    </div>
</div>




{% endblock %}