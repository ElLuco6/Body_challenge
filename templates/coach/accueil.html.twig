{% extends 'base.html.twig' %}

{% block title %}Body challenge!{% endblock %}

{% block body %}
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://cdn.confortdevie.com/wp-content/uploads/2019/05/Legging-sport-femme-e1572055012928.jpg" class="d-block w-100" alt="carousel1">

    </div>
    <div class="carousel-item">
      <img src="https://www.sportstrategies.com/wp-content/uploads/2020/05/cover.png" class="d-block w-100" alt="carousel2">
    </div>
    <div class="carousel-item">
      <img src="https://www.cros-rhonealpes.fr/wp-content/uploads/2020/04/performance-sportive.jpg" class="d-block w-100" alt="carousel3">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<section class="container-fluid">
  <article class="row">
  {% for coach in coaches %}
    <div class="col-3">
      <div class="card" style="width: 18rem;">
  <img src="https://www.superprof.fr/images/annonces/professeur-home-coach-sportif-educatrice-activites-physiques-adaptees-dieteticienne-nutritionniste-donne-cours-individuels.jpg" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{ coach.first_name }}, {{ coach.age }} ans</h5>
    <p class="card-text">{{ coach.city }}</p>
    <p class="card-text">{{ coach.sport }}</p>
    <p class="card-text">{{ coach.tarif }}</p>
    <a href="{{ path('app_view', {id: coach.id})}}" class="btn btn-dark">Voir le coach</a>
  </div>
</div>
    </div>
     {% endfor %}
    {# ici #}
    <div class="col-3">
      <div id="maCarte">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d92947.59869583642!2d5.310456843860185!3d43.2804941577675!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12c9bf4344da5333%3A0x40819a5fd970220!2sMarseille!5e0!3m2!1sfr!2sfr!4v1621884741449!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
      </div>
    </div>
  </article>
</section>


